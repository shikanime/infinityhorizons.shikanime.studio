---
import { Image } from "astro:assets";
import Logo from "../assets/logo.webp";
---

<div class="hero min-h-screen">
  <div class="hero-content">
    <div class="flex flex-col gap-y-8 items-center">
      <Image
        src={Logo}
        alt="logo"
        width="150"
        height="150"
        class="mx-auto"
        loading="eager"
        quality="max"
      />
      <div class="flex flex-col gap-4 max-w-md text-center">
        <h1 class="text-5xl font-bold">Infinity Horizons</h1>
        <p>
          Where ideas collide and imagination soars, we are proud dreamers on
          the mission to make them a reality.
        </p>
      </div>
      <a href="#intro">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="w-6 h-6"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M19.5 5.25l-7.5 7.5-7.5-7.5m15 6l-7.5 7.5-7.5-7.5"></path>
        </svg>
      </a>
    </div>
  </div>
</div>
